<div class="row">
  <div calss="col-xs-12">
    <% if @customer.errors.any? %>
      <h3><%= pluralize(@customer.errors.count, "error") %>
        prohibited this shipping_address from being saved:</h3>
      <% @customer.errors.full_messages.each do |message| %>
        <ul><li><%= message %></li></ul>
      <% end %>
    <% end %>
    <h2 class="head-line title_h2 text-center">
      <%= @customer.last_name %>
      <%= @customer.first_name %>さんの会員情報編集
    </h2>
  </div>

  <%= form_with(model: @customer, url:admin_customer_path, local: true ,method: :patch) do |f| %>

    <div class="col-xs-10">
      <div class="form-group col-xs-9">
        <%= f.label :"会員ID", class: "col-sm-3 control-label" %>
        <%= f.label :"#{@customer.id}" %>
      </div>
      <div class="form-group col-xs-9">
        <%= f.label :"氏名", class: "col-sm-3 control-label" %>
        <%= f.text_field :last_name, class: "col-sm-4 form-control-static name" %>　
        <%= f.text_field :first_name, class: "col-sm-4 form-control-static name" %>
      </div>
      <div class="form-group col-xs-9">
        <%= f.label :"フリガナ", class: "col-sm-3 control-label" %>
        <%= f.text_field :kana_last_name, class: "col-sm-4 form-control-static name" %>
        <%= f.text_field :kana_first_name, class: "col-sm-4 form-control-static name" %>
      </div>
      <div class="form-group col-xs-9">
        <%= f.label :"郵便番号", class: "col-sm-3 control-label" %>
        <%= f.text_field :postal_code, class: "col-sm-4 form-control-static" %>
      </div>
      <div class="form-group col-xs-9">
        <%= f.label :"住所", class: "col-sm-3 control-label" %>
        <%= f.text_field :residence , class: "col-sm-9 form-control-static" %>
      </div>
      <div class="form-group col-xs-9">
        <%= f.label :"電話番号", class: "col-sm-3 control-label" %>
        <%= f.text_field :phone_number, class: "col-sm-4 form-control-static" %>
      </div>
      <div class="form-group col-xs-9">
        <%= f.label :"メールアドレス", class: "col-sm-3 control-label" %>
        <%= f.text_field :email, class: "col-sm-6 form-control-static"%>
      </div>
      <div class="form-group col-xs-9">
        <%= f.label :"会員ステータス", class: "col-sm-3 control-label" %>
        <%= f.radio_button :is_valid, true %>
        <%= f.label :is_valid, "退会済", {value: :true, style: "display: inline-block;"} %>
        <%= f.radio_button :is_valid, false %>
        <%= f.label :is_valid, "有効", {value: :false, style: "display: inline-block;"} %>
      </div>
      <div class="actions col-xs-9">
        <%= f.submit '変更を保存する' ,class: "btn btn-primary" %>
      </div>

  <% end %>
</div>
