<% provide(:title, "注文履歴詳細") %>
<h2 class="head-line title_h2 text-center">注文履歴詳細</h2>
  <div class="row">
    <div class="col-xs-12" >
      <div class="col-xs-9">
		<div class="field">
		  <div class="col-xs-4">
			購入者
		  </div> 
		  <div class="col-xs-8">
		    <%= @order.name %>
		  </div>
		</div>

	    <div class="field">
	      <div class="col-xs-4">
	        配送先
	      </div> 
	      <div class="col-xs-8">
	        <%= full_address(@order) %>
	      </div>
	    </div>

	    <div class="field">
	      <div class="col-xs-4">
	        支払い方法
	      </div> 
	      <div class="col-xs-8">
	        <%= @order.payment_method %>
	      </div>
	    </div>

 	  <%= form_for(@order, url: admin_order_path, method: :patch) do |f| %>
 	    <div class="col-xs-4">注文ステータス</div>
      	  <div class="col-xs-6"><%= f.select :order_status, [['入金待ち'], ['入金確認'], ['製作中'], ['発送準備中'], ['発送済']], class: "order_status" %></div>

      	<div class="actions">
          <div class="col-xs-2"><%= f.submit '更新'  ,class: "btn btn-primary" %></div>
      	</div>
      <% end %>
      </div>

	  <div class="buyer-order col-xs-9">
			<table class="table table-hover table-bordered table-inverse">
			    <thead>
			        <tr class="info">
			          <th class="col-xs-4">商品名</th>
			          <th>単価（税込）</th>
			          <th>数量</th>
			          <th>小計</th>
			          <th>製作ステータス</th>
			          
			        </tr>
			    </thead>
				<tbody>
				<% if flash[:notice] %>
		          	<div class="flash">
		             <%= flash[:notice] %>
		          	</div>
	          	<% end %>
				<% @order_details.each do |order_detail| %>
					<tr>
			            <td class="text-left">
			              <%= order_detail.product.name %>
			            </td>
			            <td class="text-right">
			              ¥<%= tax_price(order_detail.product.tax_out_price).to_s(:delimited) %>
			            </td>
			            <td class="text-right">
			              <%= order_detail.quantity %>
			            </td>
			            <td class="text-right">
			              ¥<%= sub_price(order_detail).to_s(:delimited) %>
			            </td>
			            <%= form_for(order_detail, url: admin_order_details_path(order_detail), method: :patch) do |f| %>
			            <td>
			            	<%= f.select :produciton_status, [['着手不可'], ['製作待ち'], ['製作中'], ['製作完了']], class: "order_status" %>
			            	<%= f.submit '更新'  ,class: "btn btn-warning" %>
			            </td>
			            <% end %>
			      	</tr>
				<% end %>
				</tbody>
			</table>
	  </div>

	  <div class="col-xs-3  billing">
			<table class="table table-hover table-bordered table-condensed">
				<tr>
            		<th class="info">商品合計</th>
					<td>¥<%= total_price(@order_details).to_s(:delimited) %></td>
				</tr>
				<tr>
					<th class="info">送料</th>
					<td>¥<%= @order.postage.to_s(:delimited) %></td>
				</tr>
				<tr>
					<th class="info">請求金額合計</th>
					<td>¥<%= @order.total_price.to_s(:delimited) %></td>
				</tr>
		    </table>
	  </div>
	</div>
  </div>
