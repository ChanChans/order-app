<% provide(:title, "お問い合わせ") %>
<div class="row">
  <div class="col-xs-12">
    <h2 class="head-line title_h2 text-center">お問い合わせ</h2>

    <%= form_with url:root_path do |f| %>

      <div class="col-xs-10">
        <div class="form-group col-xs-12">
          <%= f.label :"氏名", class: "col-sm-3 control-label" %>
          <%= f.text_field :name, class: "col-sm-4 form-control-static name" %>
        </div>
        <div class="form-group col-xs-12">
          <%= f.label :"メールアドレス", class: "col-sm-3 control-label" %>
            <%= f.email_field :mail, autofocus: true, autocomplete: "email", class: "col-sm-9 form-control-static" %>
        </div>
        <div class="form-group col-xs-12">
          <%= f.label :"お問い合わせ内容", class: "col-sm-3 control-label" %>
          <%= f.text_area :comment,class: "col-sm-9 form-control-static" %>
        </div>
        <div class="form-group col-xs-12 text-center">
          <p>気軽にお問い合わせください</P>
        </div>
        <div class="actions col-xs-8">
          <%= f.submit "送信する", class: "btn btn-primary col-sm-5 pull-right" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
