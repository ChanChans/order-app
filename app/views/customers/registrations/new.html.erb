<div class="row">
  <div class="col-xs-offset-1 col-xs-11">

    <h2 class="head-line title_h2 text-center">新規会員登録</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.label :"名前" %>
        (姓)<%= f.text_field :last_name, autofocus: true %>
        (名)<%= f.text_field :first_name, autofocus: true %>
      </div>

      <div class="field">
        <%= f.label :"フリガナ" %>
        (セイ)<%= f.text_field :kana_last_name, autofocus: true %>
        (メイ)<%= f.text_field :kana_first_name, autofocus: true %>
      </div>

      <div class="field">
        <%= f.label :"メールアドレス" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <div class=“field”>
        <%= f.label :"郵便番号(ハイフンなし)" %>
        <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %>
      </div>

      <div class=“field”>
        <%= f.label :"住所" %>
        <%= f.text_field :residence, autofocus: true, autocomplete: "residence", id:"residence" %>
      </div>

      <div class=“field”>
        <%= f.label :"電話番号(ハイフンなし)" %>
        <%= f.text_field :phone_number, autofocus: true %>
      </div>

      <div class=“field”>
        <%= f.label :"パスワード(6文字以上)" %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %>
        <%= f.password_field :password, autocomplete: "new-password" %>
      </div>

      <div class=“field”>
        <%= f.label :"パスワード(確認用)" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>

      <div class="actions">
        <%= f.submit "新規登録",class: 'btn btn-success' %>
      </div>
    <% end %>
    <h2>既に登録済みの方</h2>
    <p><%= render "customers/shared/links" %>からログインしてください。</p>

  </div>
</div>
